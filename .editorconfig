root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = false
max_line_length = 120
spaces_around_operators = true

[*.md]
trim_trailing_whitespace = false

[*.{bat,vbs,cmd,ps1}]
end_of_line = crlf

[*.tsv]
indent_style = tab
